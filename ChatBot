def get_response(Question_by_User):
    Question_by_User = Question_by_User.lower()  
    for key in Chat_Bot_Dataset:
        if key in Question_by_User:
            return random.choice(Chat_Bot_Dataset[key])
    return "I don't know how to respond that one."


while True:
    Question_by_User = input("Enter your prompt: ")
    if Question_by_User.lower() == "exit":
        print("ChatBot: Goodbye!")
        break
    response = get_response(Question_by_User)
    print("ChatBot:", response)
